@model List<ProductControl.Models.Product>

<h1>@ViewData["Title"]</h1>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Data de Entrega</th>
                <th scope="col">Validade</th>
                <th scope="col" colspan="2">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.IdProduct</td>
                    <td>@product.Produto</td>
                    <td>@product.Quantidade</td>
                    <td>@product.DataEntrega.ToString("yyyy-MM-dd")</td>
                    <td>@product.Validade.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.IdProduct" class="btn btn-warning btn-sm">
                            Editar
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.IdProduct" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum produto cadastrado.</p>
}

<a asp-controller="Product" asp-action="Create" class="btn btn-primary">Novo Produto</a>
