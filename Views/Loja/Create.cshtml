@{
    ViewData["Title"] = "Cadastro de Loja";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cadastro.css" />
}

<div class="cadastro-container">
    <h2>Cadastro de Loja</h2>

    @if (TempData["Message"] != null)
    {
        <div id="temp-message" class="alert alert-warning text-center">
            @TempData["Message"]
        </div>
    }

    <form asp-controller="Loja" asp-action="Create" method="post">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" name="Nome" class="form-control" id="nome" required />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="Email" class="form-control" id="email" required />
        </div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>

    <div class="cadastro-footer">
        <span>JÃ¡ tem uma conta? </span>
        <a asp-controller="Loja" asp-action="Login">Ir para o login</a>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            var msg = document.getElementById('temp-message');
            if (msg) {
                msg.style.transition = 'opacity 0.5s ease';
                msg.style.opacity = '0';
                setTimeout(() => msg.remove(), 500);
            }
        }, 3000);
    </script>
}
